<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.http" level="info" />
    <logger name="io.grpc" level="warn" />

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
